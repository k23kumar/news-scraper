<div class="card">
  <div class="card-header">
      <a href="{{link}}">
        <h5 class="card-title">{{title}}</h5>
      </a>
  </div>
</div>

<div>
  <br>
  <h5>Comments</h5>
  <form id="add-comment" data-url="/articles/{{_id}}">
    <textarea id="comment-body" placeholder="Add a comment..."></textarea> <br>
    <input type="submit">
  </form>
</div>

<div id="comments-display">
{{#each notes}}
<div class="comment">
  <div class="row">
    <div class="col-11">
      <p class="comment-text">{{body}}</p>
      <p class="comment-time">{{createdAt}}</p>
    </div>
    <div class="col-1">
      <button data-id={{this._id}} class="delete-comment btn btn-danger">X</button>
    </div>
  </div>
</div>
{{/each}}
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
<script src="/public/comment.js"></script>



